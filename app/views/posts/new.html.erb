<h1>New Post!!!</h1>

<form class="" action="<%= posts_url %>" method="post">
  <%= auth_token %>
  <!-- <input type="hidden" name="post[sub_id]" value="<%#= params[:sub_id] %>"> -->

  <label for="">Title
    <input type="text" name="post[title]" value="<%= @post.title %>">
  </label>

  <label for="">URL
    <input type="text" name="post[url]" value="<%= @post.url %>">
  </label>

  <label for="">Content
    <input type="text" name="post[content]" value="<%= @post.content %>">
  </label>
  <br>

  <label>Subs</label>

  <input type="hidden" name="post[sub_ids][]" value="">

  <% Sub.all.each do |sub| %>
    <label><%= sub.title %>
      <input type="checkbox"
              value="<%= sub.id %>"
              name="post[sub_ids][]"
              <%= "checked" if @post.sub_ids.include?(sub.id) %>>
    </label>
  <% end %>
  <br>

  <input type="submit" name="" value="Add Post">
</form>
