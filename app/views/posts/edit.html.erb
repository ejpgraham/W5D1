<h1>Edit Post!!!</h1>

<form class="" action="<%= post_url(@post) %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <%= auth_token %>


  <label for="">Title
    <input type="text" name="post[title]" value="<%= @post.title %>">
  </label>

  <label for="">URL
    <input type="text" name="post[url]" value="<%= @post.url %>">
  </label>

  <label for="">Content
    <input type="text" name="post[content]" value="<%= @post.content %>">
  </label>
  <br>
  <label>Subs</label>

  <input type="hidden" name="post[sub_ids][]" value="">

  <% Sub.all.each do |sub| %>
    <label><%= sub.title %>
      <input type="checkbox"
              value="<%= sub.id %>"
              name="post[sub_ids][]"
              <%= "checked" if @post.sub_ids.include?(sub.id) %>>
    </label>
  <% end %>
  <br>
  <input type="submit" name="" value="Edit Post">
</form>
